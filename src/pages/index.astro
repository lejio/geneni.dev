---
import Layout from "./Layout.astro";
import LanguageBubbles from "../components/LanguageBubbles";
import { Image } from "astro:assets";
import msu_icon from "../images/msu_helmet.svg";
---

<Layout title="Gene Ni | 25' UMCP">
  <div
    class="relative max-w-[1920px] max-h-[1080px] w-full h-full flex flex-col items-center justify-center gap-3 text-white bg-gradient-to-r from-fuchsia-400 to-blue-600 rounded-xl"
  >
    <!-- Background bubbles -->
    <LanguageBubbles client:load />

    <!-- Foreground content -->
    <h2 class="text-5xl z-10">Gene Ni</h2>
    <p class="z-10">Full Stack Developer @</p>
    <Image class="w-10" src={msu_icon} alt="MSU Icon" />
    <p class="z-10 font-bold text-2xl text-[#18453B]">
      Michigan State University
    </p>

    <p class="z-10 font-bold text-2xl text-[#7BBD00]">Irrigation Laboratory</p>
  </div>
</Layout>
